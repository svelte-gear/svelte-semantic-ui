{
    "name":    "svelte-app",
    "version": "0.1.0",
    "private": true,
    "license": "MIT",
    "description": "copy of svelte-semantic-ui compiled in svelte-kit",
    "type": "module",
    "x_svelte": "./dist/index.js",
    "x_types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        },
        "./common": {
            "types": "./dist/semantic/common.d.ts",
            "svelte": "./dist/semantic/common.js"
        }
    },
    "@files": "file to be included when your package is installed as a dependency",
    "files": [
        "dist",
        "!dist/**/*.spec.*"
    ],
    "@browser": "if your module is meant to be used client-side, the browser field should be used instead of the main field (primary entry point to your program)",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && npm run package",
        "preview": "vite preview",
        "package": "svelte-kit sync && svelte-package && publint",
        "prepublishOnly": "npm run package",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --plugin-search-dir . --check . && eslint .",
        "format": "prettier --plugin-search-dir . --write .",
        "serve":  "sirv public --no-clear --host 0.0.0.0"
    },
    "peerDependencies": {
        "svelte": "^3.12.1 || ^4.0.0",
        "jquery": "^1.12.4 || ^2.2.4 || ^3.3.1",
        "semantic-ui": "^2.4.2",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-less": "^2.4.1",
        "fomantic-ui": "^2.8.7",
        "fomantic-ui-css": "^2.8.8",
        "fomantic-ui-less": "^2.8.3"
    },
    "peerDependenciesMeta": {
        "svelte": { "optional": false },
        "jquery": { "optional": false, "comment": "must be staticly loaded in DOM" },
        "semantic-ui": { "optional": false, "comment": "a semantic or fomantic package, imported or loaded in DOM" },
        "semantic-ui-css": { "optional": true },
        "semantic-ui-less": { "optional": true },
        "fomantic-ui": { "optional": false, "comment": "additional fomantic modules: calendar, slider, toast, form" },
        "fomantic-ui-css": { "optional": true },
        "fomantic-ui-less": { "optional": true }
    },
    "x_dependencies": {
        "yup": "1.2.0"
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "2.0.2",
        "@sveltejs/kit": "1.22.1",
        "@sveltejs/package": "2.1.0",

        "eslint": "8.44.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-svelte": "2.32.2",
        "@typescript-eslint/eslint-plugin": "5.61.0",
        "@typescript-eslint/parser": "5.61.0",

        "eslint-config-airbnb-typescript": "17.0.0",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-jsx-a11y": "6.7.1",
        "eslint-plugin-promise": "6.1.1",
        "eslint-plugin-react": "7.32.2",

        "prettier": "2.8.8",
        "prettier-plugin-svelte": "2.10.1",

        "publint": "0.1.16",
        "svelte": "4.0.5",
        "svelte-check": "3.4.5",
        "tslib": "2.6.0",
        "typescript": "5.1.6",
        "vite": "4.4.2",
        "npm-run-all": "4.1.5",
        "sirv-cli": "2.0.2"
    }
}

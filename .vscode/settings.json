{
    // project
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": true,

    "eslint.probe": ["javascript", "typescript", "svelte", "javascriptreact", "typescriptreact"],
    "eslint.validate": ["javascript", "typescript", "svelte"],

    "prettier.configPath": ".prettierrc.cjs",
    "prettier.requireConfig": true,

    "svelte.enable-ts-plugin": true,
    "svelte.plugin.svelte.defaultScriptLanguage": "ts",

    "[svelte]":     { "editor.defaultFormatter": "svelte.svelte-vscode" },
    "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[html]":       { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[json]":       { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[jsonc]":      { "editor.defaultFormatter": "esbenp.prettier-vscode" },

    // personal
    "banner-comments-plus.font": "Nancyj-Improved",
    "banner-comments-plus.trimEmptyLines": true,

    "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace'",
    "editor.fontLigatures": false,
    "editor.renderWhitespace": "all",
    "editor.rulers": [60, 100],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent",

    "eslint.lintTask.enable": true,

    "git.openRepositoryInParentFolders": "never",

    "todo-tree.highlights.useColourScheme": true,

    "security.workspace.trust.untrustedFiles": "open",
    "workbench.tree.indent": 20,        // larger indent in the left tree
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.zoomLevel": 1,
    "diffEditor.ignoreTrimWhitespace": false,
    "git.confirmSync": false,

}

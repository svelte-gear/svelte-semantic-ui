{
    // project
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": true,

    "eslint.probe": ["javascript", "typescript", "svelte", "javascriptreact", "typescriptreact"],
    "eslint.validate": ["javascript", "typescript", "svelte"],

    "prettier.configPath": ".prettierrc.cjs",
    "prettier.requireConfig": true,

    "svelte.enable-ts-plugin": true,
    "svelte.plugin.svelte.defaultScriptLanguage": "ts",

    "[svelte]":     { "editor.defaultFormatter": "svelte.svelte-vscode" },
    "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[html]":       { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[json]":       { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[jsonc]":      { "editor.defaultFormatter": "esbenp.prettier-vscode" },

    // personal
    "banner-comments-plus.font": "Nancyj-Improved",
    "banner-comments-plus.trimEmptyLines": true,

    "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace'",
    "editor.fontLigatures": false,
    "editor.renderWhitespace": "all",
    "editor.rulers": [60, 100, 120],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.wrappingIndent": "indent",

    "eslint.lintTask.enable": true,

    "git.openRepositoryInParentFolders": "never",

    "todo-tree.highlights.useColourScheme": true,

    "security.workspace.trust.untrustedFiles": "open",
    "workbench.tree.indent": 20,        // larger indent in the left tree
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.zoomLevel": 1,
    "diffEditor.ignoreTrimWhitespace": false,
    "git.confirmSync": false,
    "i18n-ally.localesPaths": [
        "src/util/sveltekit-i18n"
    ],
    "i18n-ally.keystyle": "flat",
    "i18n-ally.extract.ignored": [
        "value = {locale}",
        "English",
        "ÄŒesky",
        "&nbsp;",
        "&nbsp;\n            {#if locStr === $currentLocale}\n                ",
        "Unsupported locale",
        " {\n            show = true;\n        }}\n    >\n        show = true\n    ",
        " {\n            ctrl.show();\n        }}\n    >\n        ctrl.show()\n    ",
        "\n                        {#if active}\n                            Validating\n                            "
    ],
    "i18n-ally.annotationInPlace": false,
    "i18n-ally.enabledFrameworks": [
        "vscode",
        "svelte"
    ],
    "i18n-ally.extract.keygenStyle": "kebab-case",
    "i18n-ally.extract.keyMaxLength": 40,
    "cSpell.words": [
        "Fomantic",
        "ooood",
        "predev",
        "publint"
    ],
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/{info,lfs,logs,refs,objects}/**",
        ".git/{index,*refs,*HEAD}",
        ".vscode",
        ".vscode-insiders",
        "doc/SETTINGS.md",
        "src/lib/i18n",
        "**/sveltekit-i18n",
        "**/extra-locales",
        "node_modules.*",
    ],

}

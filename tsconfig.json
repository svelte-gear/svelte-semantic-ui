// tsconfig.json
// https://github.com/tsconfig/bases/blob/main/bases/svelte.json
// https://www.typescriptlang.org/tsconfig

{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        // type checking
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true /*        duplicate with @typescript-eslint/no-unused-vars */,
        "noUnusedParameters": true /*    duplicate with @typescript-eslint/no-unused-vars */,
        // "skipLibCheck": true /*       faster compile at expense of type accuracy */,
        "strict": true,

        // modules
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "module": "ES2020" /*            support for dynamic import */,
        "moduleResolution": "node" /*    "node" is required for eslint to get type information on imports */,
        "resolveJsonModule": true /*     allows to import json */,
        "types": [
            "svelte"
        ] /*           include packages without reference from src, replaces /// <reference in d.ts */,
        "verbatimModuleSyntax": true /*  enforce using `import type` instead of `import` */,

        // language
        "allowJs": true,
        "checkJs": true,
        // "lib": ["es2020", "DOM"] /*   default for es2021 target */,
        "sourceMap": true /*             to have Svelte warnings/errors at the correct position */,
        "target": "es2020"
    }
}
